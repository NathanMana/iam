{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Basic template of a node + typescript project",
  "main": "dist/index.js",
  "scripts": {
    "build": "del /q dist && tsc",
    "lint": "eslint --fix src",
    "start": "node ./dist/index.js",
    "test": "SET NODE_ENV=test&&mocha --env --recursive dist/specs --exit --async-stack-traces",
    "launchTest": "npm run build && npm run test",
    "launch": "npm run lint && npm run build && npm run start"
  },
  "author": "Thomas VEILLARD",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.2.0",
    "mocha": "^10.1.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "mysql2": "^2.3.3",
    "typeorm": "^0.3.10"
  }
}
